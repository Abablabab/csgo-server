//----------------------------------------------------------------------------
// Edited by Ross
//
// This is a combination easy/hard bot config, the easy and medium bots use 
// difficulty values from the unmodified CSGO bot settings, the hard and expert
// bots use settings defined by the gamebanana guy
//
//----------------------------------------------------------------------------
//
// All profiles begin with this data and overwrite their own
//
Default
	Skill = 50
	ReactionTime = 0.3
	AttackDelay = 0
	Teamwork = 100
	AimFocusInitial = 10			// initial focus spread in degrees (from desired center)
	AimFocusDecay = 0.5				// how much focus shrinks per second (.25 = 25% of size after 1 sec)
	AimFocusOffsetScale = 0.20		// controls accuracy when tracking to target (0 == perfect, should always be < 1)
	AimfocusInterval = 0.2			// how often focus is adjusted (smaller intervals means better movement tracking)
	WeaponPreference = none
	Cost = 0
	Difficulty = NORMAL
	VoicePitch = 100
	Skin = 0
	LookAngleMaxAccelNormal = 2000.0
	LookAngleStiffnessNormal = 100.0
	LookAngleDampingNormal = 20.0
	LookAngleMaxAccelAttacking = 2000.0
	LookAngleStiffnessAttacking = 1000.0
	LookAngleDampingAttacking = 50.0
End

//----------------------------------------------------------------------------

// These preferences seem weird, but only the top few apply to buy actions
// The rest are there to make sure the bots will upgrade when they come across a better gun

Template Push
    WeaponPreference = m4a1
    WeaponPreference = ak47
    WeaponPreference = ump45
    WeaponPreference = mp7
    WeaponPreference = sg556
    WeaponPreference = aug
    WeaponPreference = awp
    WeaponPreference = galilar
    WeaponPreference = famas

    Aggression = 100
    Skin = 1
End

Template Range
    WeaponPreference = aug
    WeaponPreference = sg556
    WeaponPreference = famas
    WeaponPreference = galilar
    WeaponPreference = ak47
    WeaponPreference = m4a1
    WeaponPreference = ump45
    WeaponPreference = mp7
	WeaponPreference = awp

    Aggression = 60
    Skin = 2
End

Template Sniper
    WeaponPreference = awp
    WeaponPreference = ak47
    WeaponPreference = m4a1
    WeaponPreference = ump45
    WeaponPreference = famas
    WeaponPreference = galilar

    Aggression = 10
    Skin = 3
End

// skill templates
Template Expert
	Skill = 100
	ReactionTime = 0.2
	AttackDelay = 0
	Difficulty = EXPERT
	AimFocusInitial = 0.1
	AimFocusDecay = 0.1
	AimFocusOffsetScale = 0.1
	AimfocusInterval = 0.1
	VoicePitch = 100
End

Template Hard
	Skill = 100
	ReactionTime = 0.3
	AttackDelay = 0
	Difficulty = HARD
	AimFocusInitial = 4
	AimFocusDecay = 0.1
	AimFocusOffsetScale = 0.2
	AimfocusInterval = 0.2
	VoicePitch = 80
End

Template Normal
	Skill = 100
	ReactionTime = 0.4
	AttackDelay = 0
	Difficulty = NORMAL
	AimFocusInitial = 10
	AimFocusDecay = 0.5
	AimFocusOffsetScale = 0.2
	AimfocusInterval = 0.5
	VoicePitch = 110
End

Template Easy
	Skill = 100
	ReactionTime = 0.5
	AttackDelay = 0
	Difficulty = EASY
	AimFocusInitial = 20			// initial focus spread in degrees (from desired center)
	AimFocusDecay = 0.7				// how much focus shrinks per second (.25 = 25% of size after 1 sec)
	AimFocusOffsetScale = 0.30		// controls accuracy when tracking to target (0 == perfect, should always be < 1)
	AimfocusInterval = 0.8			// how often focus is adjusted (smaller intervals means better movement tracking)
	VoicePitch = 90
End

