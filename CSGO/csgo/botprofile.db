//----------------------------------------------------------------------------
// Edited by Ross
//
// This is a combination easy/hard bot config, the easy and medium bots use 
// difficulty values from the unmodified CSGO bot settings, the hard and expert
// bots use settings defined by the gamebanana guy
//
//----------------------------------------------------------------------------
//
// All profiles begin with this data and overwrite their own
//
Default
    Skill               = 50
    Aggression          = 50
    ReactionTime        = 0.3
    AttackDelay         = 0
    Teamwork            = 75
    AimFocusInitial     = 20          // initial focus spread in degrees (from desired center)
    AimFocusDecay       = 0.7         // how much focus shrinks per second (.25 = 25% of size after 1 sec)
    AimFocusOffsetScale = 0.30        // controls accuracy when tracking to target (0 == perfect, should always be < 1)
    AimfocusInterval    = 0.8         // how often focus is adjusted (smaller intervals means better movement tracking)
    WeaponPreference    = none
    Cost                = 0
    Difficulty          = NORMAL
    VoicePitch          = 100
    Skin                = 0
    LookAngleMaxAccelNormal     = 6000.0
    LookAngleStiffnessNormal    = 600.0
    LookAngleDampingNormal      = 50.0
    LookAngleMaxAccelAttacking  = 6000.0
    LookAngleStiffnessAttacking = 550.0
    LookAngleDampingAttacking   = 35.0
End

//----------------------------------------------------------------------------

// These preferences seem weird, but only the top few apply to buy actions
// The rest are there to make sure the bots will upgrade when they come across a better gun

Template Push
    WeaponPreference = m4a1
    WeaponPreference = ak47
    WeaponPreference = ump45
    WeaponPreference = mp7
    WeaponPreference = sg556
    WeaponPreference = aug
    WeaponPreference = awp
    WeaponPreference = galilar
    WeaponPreference = famas

    Aggression = 100
    Skin = 1
End

Template Range
    WeaponPreference = aug
    WeaponPreference = sg556
    WeaponPreference = famas
    WeaponPreference = galilar
    WeaponPreference = ak47
    WeaponPreference = m4a1
    WeaponPreference = ump45
    WeaponPreference = mp7
    WeaponPreference = awp

    Aggression = 60
    Skin = 2
End

Template Sniper
    WeaponPreference = awp
    WeaponPreference = ak47
    WeaponPreference = m4a1
    WeaponPreference = ump45
    WeaponPreference = famas
    WeaponPreference = galilar

    Aggression = 10
    Skin = 3
End

// Skill Templates
// Normally CSGO has two profiles for each difficulty -
// (Easy/Fair, Normal/Tough, Hard/VeryHard, Expert/Elite).
// to save me literally hours creating bot profiles I've only used one.
//
// But just in case these bots just aren't strong enough, their 'upper tier'
// values are included as comments to the values set below

Template Expert
    Skill               = 90      // 100
    ReactionTime        = 0.2
    Difficulty          = EXPERT
    AimFocusInitial     = 0.1
    AimFocusDecay       = 0.05    // 0.01
    AimFocusOffsetScale = 0.03    // 0.01
    AimfocusInterval    = 0.03    // 0.01
    VoicePitch          = 100
End

Template Hard
    Skill               = 75      // 80
    ReactionTime        = 0.35    // 0.3
    Difficulty          = HARD
    AimFocusInitial     = 5.0     // 1.0
    AimFocusDecay       = 0.3     // 0.1
    AimFocusOffsetScale = 0.17    // 0.05
    AimfocusInterval    = 0.3     // 0.05
    VoicePitch          = 90
End

Template Normal
    Skill               = 50      // 60
    ReactionTime        = 0.45    // 0.4
    Difficulty          = NORMAL
    AimFocusInitial     = 10.0
    AimFocusDecay       = 0.4
    AimFocusOffsetScale = 0.25    // 0.2
    AimfocusInterval    = 0.5     // 0.4
    VoicePitch          = 110
End

Template Easy
    Skill               = 15      // 25
    ReactionTime        = 0.5
    Difficulty          = EASY
    AttackDelay         = 0.01    // 0.0
    AimFocusInitial     = 17.0    // 12.0
    AimFocusDecay       = 0.6     // 0.5
    AimFocusOffsetScale = 0.5     // 0.35
    AimfocusInterval    = 0.7     // 0.6
    VoicePitch          = 80
End

